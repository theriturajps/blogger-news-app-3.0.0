<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.appbar.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_white"
        android:paddingStart="@dimen/gnt_no_margin"
        android:paddingEnd="@dimen/spacing_medium"
        app:contentInsetStartWithNavigation="0dp"
        app:layout_scrollFlags="scroll|enterAlways">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/toolbar_title"
                style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/color_light_text" />

            <View
                android:layout_width="3dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/btn_font_size"
                android:layout_width="@dimen/spacing_xxlarge"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_menu_font_size"
                app:tint="@color/color_light_icon" />

            <!--            <View-->
            <!--                android:layout_width="3dp"-->
            <!--                android:layout_height="0dp" />-->

            <!--            <ImageButton-->
            <!--                android:id="@+id/btn_share"-->
            <!--                android:layout_width="@dimen/spacing_xxlarge"-->
            <!--                android:layout_height="@dimen/spacing_xxlarge"-->
            <!--                android:background="?selectableItemBackgroundBorderless"-->
            <!--                android:contentDescription="@string/content_description"-->
            <!--                android:src="@drawable/ic_menu_share"-->
            <!--                app:tint="@color/color_light_icon" />-->

            <View
                android:layout_width="3dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/btn_favorite"
                android:layout_width="@dimen/spacing_xxlarge"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_menu_favorite_outline"
                app:tint="@color/color_light_icon" />

            <View
                android:layout_width="3dp"
                android:layout_height="0dp" />

            <ImageButton
                android:id="@+id/btn_overflow"
                android:layout_width="@dimen/spacing_xxlarge"
                android:layout_height="@dimen/spacing_xxlarge"
                android:background="?selectableItemBackgroundBorderless"
                android:contentDescription="@string/content_description"
                android:src="@drawable/ic_dots"
                app:tint="@color/color_light_icon" />

            <!--            <ImageButton-->
            <!--                android:id="@+id/btn_view"-->
            <!--                android:layout_width="@dimen/spacing_xxlarge"-->
            <!--                android:layout_height="@dimen/spacing_xxlarge"-->
            <!--                android:background="?selectableItemBackgroundBorderless"-->
            <!--                android:contentDescription="@string/content_description"-->
            <!--                android:src="@drawable/ic_menu_launch"-->
            <!--                app:tint="@color/color_light_icon" />-->

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

</com.google.android.material.appbar.AppBarLayout>